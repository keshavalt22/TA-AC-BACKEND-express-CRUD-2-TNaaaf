<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books</title>
    <link rel="stylesheet" href="/stylesheet/style.css">
</head>
<body>
    <div class="container">
        <header class="flex">
            <a href="/">
                <h2 class="brand">Bookstore</h2>
            </a>
            <nav>
                <a href="/books/new">
                    <button class="btn-green">Add Book</button>
                </a>
            </nav>
        </header>
        <main>
            <h2 class="heading">List Of Books</h2>
            <div class="list">
                <% books.forEach(book => { %>
                    <h3><%= book.title %></h3>
                    <a href="/books/<%= book._id %>">
                        <button class="btn-green">Show</button>
                    </a>
                <% }) %>
            </div>
        </main>
    </div>
</body>
</html>
